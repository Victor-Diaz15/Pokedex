@model Application.ViewModels.SavePokemonViewModel 
@{
    ViewData["Title"] = "Delete Pokemon";
}

<div class="container-fluid">
    <div class="d-flex justify-content-center">
        <div class="col-6">
            <div class="card my-5">
                <div class="card-header bg-danger text-light">
                    <h3>Esta seguro que desea eliminar este pokemon @Model.Name?</h3>
                </div>
                <div class="card-body text-center">
                    <form method="post" asp-controller="Pokemon" asp-action="DeletePokemon">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-outline-danger me-3">Eliminar</button>
                        <a asp-controller="Pokemon" asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

