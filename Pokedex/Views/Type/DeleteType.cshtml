@model Application.ViewModels.TypeViewModel
@{
    ViewData["Title"] = "Delete Type";
}

<div class="container-fluid">
    <div class="d-flex justify-content-center">
        <div class="col-6">
            <div class="card my-5">
                <div class="card-header bg-danger text-light">
                    <h3>Esta seguro que desea eliminar este tipo: @Model.NameType?</h3>
                </div>
                <div class="card-body text-center">
                    <form method="post" asp-controller="Type" asp-action="DeleteType">
                        <input type="hidden" asp-for="IdType" />

                        <button type="submit" class="btn btn-outline-danger me-3">Eliminar</button>
                        <a asp-controller="Type" asp-action="IndexType" class="btn btn-outline-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

